
.pub-form {
  padding: 10px;
  background-color: #fff;
}

.pub-form > view + view {
  margin-top: 15px;
}
.pub-form > view > text {
  font-size: 14px;
}

.pub-form input,
.pub-form textarea {
  color: #000;
  width: 100%;
}

textarea {
  min-height: 30px;
}

/* 图片添加 开始 */
.img-list {
  font-size: 0;
}
.img-div {
  width: 33.33%;
  padding-bottom: 33.33%;
  overflow: hidden;
  display: inline-block;
  position: relative;
}
.img-div .img {
  width:97%;
  height:97%;
  position:absolute;
  top:0;
  left:0;
  right:0;
  bottom:0;
  margin:auto;
}
.img-add-div {
  width:33.33%;
  padding-bottom:33.33%;
  position:relative;
  display:inline-block;
  vertical-align:top;
}
.del-img {
  position:absolute;
  font-size:12px;
  width:100%;
  background-color:rgba(255,255,255,.8);
  text-align:center;
  bottom:0;
  padding:5px 0;
  color:red;
}
/* 图片添加 结束 */


/* 加号 开始 */
.img-add {
  background-color:#eee;
  color:#ccc;
  width:97%;
  height:97%;
  position:absolute;
  top:0;
  left:0;
  right:0;
  bottom:0;
  margin:auto;
}
.img-add::before{
  content: '';
  position: absolute;
  left: 50%;
  top: 50%;
  width: 40px;
  margin-left: -20px;
  margin-top: -2px;
  border-top: 4px solid;
}
.img-add::after {
 content: '';
 position: absolute;
 left: 50%;
 top: 50%;
 height: 40px;
 margin-top: -20px;
 margin-left: -2px;
 border-left: 4px solid;
}
/* 加号 结束 */