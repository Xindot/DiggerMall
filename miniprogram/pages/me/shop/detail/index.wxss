.contact-info {
  display:inline-block;
  font-size: 14px;
}

.user-info {
  padding: 10px 0;
}

.shop-desc {
  font-size: 12px;
}

.shop-area {
  background-color: #F6F6F6;
  padding: 10px;
  margin-top: 10px;
  height:68px;
  box-sizing:border-box;
  position: relative;
}

.pub-total {
  position:absolute;
  top:10px;
  right:10px;
  height:20px;
  line-height:20px;
  text-align:center;
  border-radius: 0;
  padding: 0 8px;
  font-size: 12px;
  color: #1f87dd;
}
.new-pub {
  position:absolute;
  top:20px;
  right:10px;
  height:28px;
  line-height:28px;
  background-color:#1f87dd;
  color: #fff;
  text-align:right;
  border-radius: 0;
  padding: 0 8px;
  font-size: 14px;
}

.pub-list {
  margin-top: 15px;
  padding: 15px 0;
  text-align: center;
  background-color: #F6F6F6;
}
.pub-list .title-0 {
  margin-bottom: 5px;
  color: #1f87dd;
}
.pub-list .title-0 > text {
  border-bottom: solid 2px #1f87dd;
}


